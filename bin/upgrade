#!/usr/bin/env php

<?php

use DirectusUpgrader\DirectusUpgrader;

if (is_file(__DIR__ . '/../../../autoload.php')) {
    require_once __DIR__ . '/../../../autoload.php';
} else if (is_file(__DIR__ . '/../vendor/autoload.php')) {
    require_once __DIR__ . '/../vendor/autoload.php';
} else {
    exit('Could not autoload!!');
}

$app = new DirectusUpgrader();

$app->echo($app->verbose);
$app->echo($app->root, 'alert');


